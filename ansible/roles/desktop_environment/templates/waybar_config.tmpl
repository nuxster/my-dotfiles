// vim: ft=json fdm=manual

{
    "output": {{ displays_parameters | map(attribute='name') | list | to_json }},
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 25, // Waybar height (to be removed for auto height)
    "spacing": 5, // Gaps between modules (5px)
    // Choose the order of the modules
    "modules-left": ["sway/workspaces", "sway/mode", "sway/scratchpad"],
    "modules-center": [
      "clock#calendar",
      "clock",
      "idle_inhibitor"
    ],
    "modules-right": [
      "tray",
      "battery",
      "sway/language",
      "wireplumber#output",
      "cpu",
      "memory",
      "temperature",
      "disk",
      "custom/power"
    ],
    // Modules configuration
    "sway/workspaces": {
      "disable-scroll": false,
      "all-outputs": true,
        "format": "{name}: {icon}",
        "format-icons": {
        "1": "ÔÑ† ",
	    "2": "ÔÑ° ",
        "3": "üåê",
        "4": "Ôáº ",
        "5": "ÔÇ± ", 
	    "6": "ÔÇÜ ",
        "7": "ÔÉ† ",
        "8": "ÔÖº ",
        "9": "ÔÖÑ ",
        "10": "ÔÅª ",
        "default": "ÔÑë "
      }
    },
    "sway/scratchpad": {
      "format": "{icon} {count}",
      "show-empty": false,
      "format-icons": ["  ", "Ôãí "],
      "tooltip": true,
      "tooltip-format": "{app}: {title}"
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "wireplumber#output": {
      "format": "{icon} {volume}%",
	    "format-muted": "ÔÄ¶ {volume}%",
      "format-bluetooth": "Ôäî {icon} {volume}%",
      "format-bluetooth-muted": "Ôäî ÔÄ¶ {volume}%",
      "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
      "on-click-right": "pavucontrol -t 3",
      "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+",
      "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
      "format-icons": {
        "headphone": "ÔÄ•",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
	    }
    },
    "cpu": {
      "interval": 10,
      "format": "Ôãõ {usage}%",
      "on-click": "gnome-system-monitor -p"
    },
    "memory": {
      "interval": 10,
      "format": "ÔÉâ {percentage}%",
      "on-click": "gnome-system-monitor -r"
    },
    {% if path_to_thermal_zone is defined and path_to_thermal_zone %}
    "temperature": {
      "interval": 5,
      "hwmon-path": "{{ path_to_thermal_zone }}",
      "critical-threshold": 80,
      "format": "Ôãâ {temperatureC}¬∞C",
    },
    {% else %}
    //"temperature": {
    //  "interval": 5,
    //  "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    //  "critical-threshold": 80,
    //  "format": "Ôãâ {temperatureC}¬∞C",
    //},
    {% endif %}
    "disk": {
      "interval": 30,
      "format": "ÔÉá {percentage_free}%",
      "on-click": "gnome-system-monitor -f",
	    "on-click-right": "gnome-disks"
    },
    "sway/language": {
      "format": "ÔÑú  {}",
      "min-length": 5,
      "on-click": "swaymsg input '1:1:AT_Translated_Set_2_keyboard' xkb_switch_layout next",
    },
    "battery": {
      "states": {
        "warning": 30,
        "critical": 15
      },
      "format": "{icon} ",
      "format-charging": "Ôá¶ {capacity}%",
      "format-alt": "{icon}  {capacity}%",
      "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "clock#calendar": {
      "timezone": "Europe/Moscow",
      "format": "{:%b %d}",
      "tooltip": true,
      "tooltip-format": "{:%d %B %Y}",
      "on-click": "$HOME/.config/waybar/bin/galendae -c $HOME/.config/galendae/dark.conf"
    },
    "clock": {
      "interval": 1,
      "timezone": "Europe/Moscow",
      "tooltip": false,
      "format": "{:%H:%M}",
      "format-alt": "{:%H:%M:%S}"
    },
    "tray": {
      "spacing": 10
    },
   // power button
  "custom/power": {
    "format": "‚èª  ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "~/.config/waybar/power_menu.xml",
    "menu-actions": {
      "shutdown": "systemctl poweroff",
      "reboot": "systemctl reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate"
    }
  }
}